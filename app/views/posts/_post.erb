<div id="no-more-tables">
	<table class="table table-striped">
		<tr>
			<!-- Username -->
			<td class="post-user">
				<%= link_to User.find(post.user_id).name, user_path(post.user_id) %>
			</td>

			<!-- Minibuttons: Quote, Reply, Delete -->
			<td class="post-time">
				Posted at 
				<time datetime="<%= post.created_at.to_s(:db) -%>"><%= post.created_at.strftime("%b %d %Y, %H:%M %p") %></time> 
			</td>
			<td class="post-options">
				<%= render 'partials/minibuttons/quote' %>
				<%= render 'partials/minibuttons/delete' %>
				<%= render 'partials/minibuttons/report' %>
			</td>
		</tr>

		<tr>
			<!-- Userinfo Panel -->
			<td class="post-userinfo">
				<img data-src="holder.js/140x140" class="img-rounded" alt="140x140" style="width: 140px; height: 140px;" src="data:image/svg+xml;base64," data-holder-rendered="true">
				<br>
				Group: Admin
				<br>
				Posts: 255
				<br>
				Joined: Datetime
			</td>

			<!-- Post -->
			<td colspan="2" class="post-content">
				<%= post.content %>
			</td>
		</tr>

		<tr class="post-footer">
			<td class="post-blank post-footer">
			</td>

			<td class="post-user-options post-footer">
				<%= render 'partials/minibuttons/pm' %>
				<%= render 'partials/minibuttons/email' %>
				<%= render 'partials/minibuttons/www' %>
			</td>

			<td class="post-top post-footer">
				Top
			</td>
		</tr>
	</table>
	<hr>
</div>