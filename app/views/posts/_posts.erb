<% for post in @topic.posts %>
<div id="no-more-tables">
	<table class="table table-striped">
		<tr>
			<!-- Username -->
			<td class="post-user">
				<%= link_to post.user.name, user_path(post.user.id) %>
			</td>

			<!-- Minibuttons: Quote, Reply, Delete -->
			<td class="post-time">
				Posted at 
				<time datetime="<%= post.created_at.to_s(:db) -%>"><%= post.created_at.strftime("%b %d %Y, %H:%M %p") %></time> 
			</td>
			<td class="post-options">
				<button class="btn btn-xs btn-primary">Quote</button>
				<button class="btn btn-xs btn-primary">Reply</button>
				<button class="btn btn-xs btn-primary">Delete</button>
				<button class="btn btn-xs btn-primary">Report</button>
			</td>
		</tr>

		<tr>
			<!-- Userinfo Panel -->
			<td class="post-userinfo">
				<img data-src="holder.js/140x140" class="img-rounded" alt="140x140" style="width: 140px; height: 140px;" src="data:image/svg+xml;base64," data-holder-rendered="true">
				<br>
				Group: Admin
				<br>
				Posts: 255
				<br>
				Joined: Datetime
			</td>

			<!-- Post -->
			<td colspan="2" class="post-content">
				<%= post.content %>
			</td>
		</tr>

		<tr>
			<td class="post-blank">
			</td>

			<td class="post-user-options">
				<button class="btn btn-xs btn-primary">PM</button>
				<button class="btn btn-xs btn-primary">Email</button>
				<button class="btn btn-xs btn-primary">WWW</button>
			</td>

			<td class="post-top">
				Top
			</td>
		</tr>
	</table>
</div>
<% end %>