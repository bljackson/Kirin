<% scope = @forum.topics.page(params[:page]).per(2) %>

<%= paginate scope %>

<% if current_user.can_create? %>
	<%= 'partials/buttons/_new_topic' %>
<% end %>

<% if current_user.can_poll? %>
	<%= 'partials/buttons/_new_poll' %>
<% end %>


<!-- Forum container -->
<div class='panel panel-primary'>

	<!-- Forum name and description -->
	<div id='forum<%= forum.id %>' class='panel-heading'>
		<h2><%= link_to forum.name, forum_path(forum.id) %></h2>
		<%= forum.description %>
	</div>

	<div class='panel-body'>
		<!-- Forum's topics -->
		<%= render 'topics/listing', :forum => forum %>
	</div>

	<!-- Empty stylistic footer -->
	<div class='panel-footer'>
	</div>
</div>